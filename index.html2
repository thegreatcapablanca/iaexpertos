  <!-- Chatbot -->
  <div class="chatbot-container">
    <div class="chatbot-toggle" id="chatbotToggle">
      <i class="fas fa-robot"></i>
    </div>
    <div class="chatbot-window" id="chatbotWindow">
      <div class="chatbot-header">
        <h3><i class="fas fa-robot mr-2"></i> Asistente IAExpertos</h3>
        <button class="chatbot-close" id="chatbotClose">&times;</button>
      </div>
      <div class="chatbot-messages" id="chatbotMessages">
        <div class="message bot-message">
          ¡Hola! Soy el asistente virtual de IAExpertos. ¿En qué puedo ayudarte hoy?
          <div class="quick-replies">
            <button class="quick-reply" data-message="¿Qué servicios ofrecen?">¿Qué servicios ofrecen?</button>
            <button class="quick-reply" data-message="¿Cómo puedo contactarlos?">¿Cómo puedo contactarlos?</button>
            <button class="quick-reply" data-message="¿Tienen precios?">¿Tienen precios?</button>
          </div>
        </div>
      </div>
      <div class="chatbot-input">
        <input type="text" id="chatbotInput" placeholder="Escribe tu mensaje...">
        <button id="chatbotSend"><i class="fas fa-paper-plane"></i></button>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Scroll animation observer
      const scrollElements = document.querySelectorAll('.slide-up');
      
      const elementInView = (el, scrollOffset = 0) => {
        const elementTop = el.getBoundingClientRect().top;
        return (
          elementTop <= (window.innerHeight || document.documentElement.clientHeight) * (1 - scrollOffset)
        );
      };
      
      const displayScrollElement = (element) => {
        element.classList.add('active');
      };
      
      const handleScrollAnimation = () => {
        scrollElements.forEach((el) => {
          if (elementInView(el, 0.2)) {
            displayScrollElement(el);
          }
        });
      };
      
      window.addEventListener('scroll', () => {
        handleScrollAnimation();
      });
      
      // Initialize the first check
      handleScrollAnimation();
      
      // Floating circles animation
      const addFloatingCircles = (containerId, count) => {
        const container = document.getElementById(containerId);
        if (!container) return;
        
        for (let i = 0; i < count; i++) {
          const circle = document.createElement('div');
          circle.classList.add('circle');
          
          // Random size between 50px and 200px
          const size = Math.random() * 150 + 50;
          circle.style.width = `${size}px`;
          circle.style.height = `${size}px`;
          
          // Random position
          circle.style.left = `${Math.random() * 100}%`;
          circle.style.top = `${Math.random() * 100}%`;
          
          // Random animation delay
          circle.style.animationDelay = `${Math.random() * 10}s`;
          
          // Random animation duration between 10s and 30s
          circle.style.animationDuration = `${Math.random() * 20 + 10}s`;
          
          // Random opacity
          circle.style.opacity = Math.random() * 0.2 + 0.1;
          
          container.appendChild(circle);
        }
      };
      
      // Add floating circles to sections
      addFloatingCircles('floating-circles', 8);
      addFloatingCircles('floating-circles-2', 6);

      // Particle animation
      const particlesContainer = document.getElementById('particles');
      if (particlesContainer) {
        const numberOfParticles = 40;
        for (let i = 0; i < numberOfParticles; i++) {
          const particle = document.createElement('div');
          particle.classList.add('particle');
          const size = Math.random() * 6 + 2;
          particle.style.width = `${size}px`;
          particle.style.height = `${size}px`;
          particle.style.left = `${Math.random() * 100}%`;
          particle.style.top = `${Math.random() * 100}%`;
          particle.style.animationDelay = `${Math.random() * 5}s`;
          particle.style.animationDuration = `${Math.random() * 7 + 5}s`;
          
          // Add glow effect
          const glowColor = Math.random() > 0.5 ? 'rgba(65, 88, 208, 0.7)' : 'rgba(200, 80, 192, 0.7)';
          particle.style.boxShadow = `0 0 ${Math.random() * 5 + 3}px ${glowColor}`;
          
          particlesContainer.appendChild(particle);
        }
      }

      // Smooth scrolling for navigation
      document.querySelectorAll('nav a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const targetElement = document.querySelector(this.getAttribute('href'));
          if (targetElement) {
            targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });

      // Counter animation
      function animateCounter(element, target, duration = 2000) {
        const start = 0;
        const increment = target / (duration / 16);
        let current = start;
        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            clearInterval(timer);
            current = target;
          }
          element.textContent = Math.floor(current);
        }, 16);
      }

      const clientCounter = document.getElementById('clientCounter');
      const projectCounter = document.getElementById('projectCounter');
      const aiCounter = document.getElementById('aiCounter');
      const teamCounter = document.getElementById('teamCounter');

      // Initialize counters when they come into view
      const initializeCounter = (element, targetValue) => {
        if (!element) return;
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              animateCounter(element, targetValue);
              observer.unobserve(element);
            }
          });
        }, { threshold: 0.5 });
        
        observer.observe(element);
      };

      initializeCounter(clientCounter, 150);
      initializeCounter(projectCounter, 320);
      initializeCounter(aiCounter, 85);
      initializeCounter(teamCounter, 25);

      // Contact form submission
      const formularioContacto = document.getElementById('formulario-contacto');
      const mensajeExito = document.getElementById('mensaje-exito');
      
      if(formularioContacto) {
        formularioContacto.addEventListener('submit', function (e) {
          e.preventDefault();
          const datos = new FormData(formularioContacto);
          fetch(formularioContacto.action, {
            method: 'POST',
            body: datos,
            headers: {
              'Accept': 'application/json'
            }
          })
          .then(respuesta => {
            if (respuesta.ok) {
              formularioContacto.reset();
              if(mensajeExito) {
                mensajeExito.style.display = 'block';
                setTimeout(() => {
                  mensajeExito.classList.add('show');
                }, 100);
                setTimeout(() => {
                  mensajeExito.classList.remove('show');
                  setTimeout(() => {
                    mensajeExito.style.display = 'none';
                  }, 500);
                }, 5000);
              }
            } else {
              respuesta.json().then(data => {
                alert(data.error || "Ocurrió un error al enviar el formulario. Inténtalo más tarde.");
              }).catch(() => {
                alert("Ocurrió un error al enviar el formulario. Inténtalo más tarde.");
              });
            }
          })
          .catch(error => {
            console.error('Error en la solicitud fetch:', error);
            alert("Ocurrió un error de red al enviar el formulario.");
          });
        });
      }

      // Chatbot functionality
      const chatbotToggle = document.getElementById('chatbotToggle');
      const chatbotWindow = document.getElementById('chatbotWindow');
      const chatbotClose = document.getElementById('chatbotClose');
      const chatbotMessages = document.getElementById('chatbotMessages');
      const chatbotInput = document.getElementById('chatbotInput');
      const chatbotSend = document.getElementById('chatbotSend');
      const quickReplies = document.querySelectorAll('.quick-reply');

      let isChatbotOpen = false;

      // Toggle chatbot window
      chatbotToggle.addEventListener('click', () => {
        isChatbotOpen = !isChatbotOpen;
        if (isChatbotOpen) {
          chatbotWindow.classList.add('active');
        } else {
          chatbotWindow.classList.remove('active');
        }
      });

      // Close chatbot
      chatbotClose.addEventListener('click', () => {
        isChatbotOpen = false;
        chatbotWindow.classList.remove('active');
      });

      // Send message
      function sendMessage() {
        const message = chatbotInput.value.trim();
        if (message === '') return;

        // Add user message
        addMessage(message, 'user');
        chatbotInput.value = '';

        // Show typing indicator
        const typingIndicator = document.createElement('div');
        typingIndicator.className = 'typing-indicator';
        typingIndicator.innerHTML = '<span></span><span></span><span></span>';
        chatbotMessages.appendChild(typingIndicator);
        chatbotMessages.scrollTop = chatbotMessages.scrollHeight;

        // Simulate bot response after delay
        setTimeout(() => {
          // Remove typing indicator
          chatbotMessages.removeChild(typingIndicator);
          
          // Add bot response
          const botResponse = getBotResponse(message);
          addMessage(botResponse.text, 'bot', botResponse.quickReplies);
        }, 1000 + Math.random() * 2000);
      }

      // Add message to chat
      function addMessage(text, sender, quickReplies = null) {
        const messageDiv = document.createElement('div');
        messageDiv.className = `message ${sender}-message`;
        messageDiv.textContent = text;
        
        if (quickReplies) {
          const repliesDiv = document.createElement('div');
          repliesDiv.className = 'quick-replies';
          
          quickReplies.forEach(reply => {
            const button = document.createElement('button');
            button.className = 'quick-reply';
            button.textContent = reply.text;
            button.dataset.message = reply.text;
            button.addEventListener('click', () => {
              addMessage(reply.text, 'user');
              setTimeout(() => {
                const response = getBotResponse(reply.text);
                addMessage(response.text, 'bot', response.quickReplies);
              }, 1000);
            });
            repliesDiv.appendChild(button);
          });
          
          messageDiv.appendChild(repliesDiv);
        }
        
        chatbotMessages.appendChild(messageDiv);
        chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
      }

      // Get bot response
      function getBotResponse(message) {
        const lowerMessage = message.toLowerCase();
        
        if (lowerMessage.includes('servicio') || lowerMessage.includes('ofrecen')) {
          return {
            text: "Ofrecemos servicios integrales de IA, incluyendo:\n\n✓ Estrategia e implementación\n✓ Formación y capacitación\n✓ Soporte y asistencia\n\n¿Te gustaría más información sobre alguno en particular?",
            quickReplies: [
              { text: "Estrategia e implementación" },
              { text: "Formación y capacitación" },
              { text: "Soporte y asistencia" }
            ]
          };
        } else if (lowerMessage.includes('contact') || lowerMessage.includes('hablar')) {
          return {
            text: "Puedes contactarnos a través de:\n\n📧 info@iaexpertos.org\n📞 +34 668 626 500\n📍 Calle José Tamayo, 8 - 18008 Granada\n\nTambién puedes completar el formulario en nuestra página de contacto o solicitar una llamada ahora.",
            quickReplies: [
              { text: "¿Cuál es su horario?" },
              { text: "¿Tienen oficina física?" },
              { text: "Solicitar llamada" }
            ]
          };
        } else if (lowerMessage.includes('precio') || lowerMessage.includes('cuesta') || lowerMessage.includes('tarifa')) {
          return {
            text: "Nuestros precios varían según el proyecto y las necesidades específicas de cada cliente. Para ofrecerte una cotización precisa, necesitamos entender mejor tus requerimientos. ¿Podrías contarme más sobre lo que necesitas o preferirías hablar con un asesor?",
            quickReplies: [
              { text: "Necesito una solución personalizada" },
              { text: "Quiero información sobre formación" },
              { text: "Hablar con un asesor" }
            ]
          };
        } else if (lowerMessage.includes('hola') || lowerMessage.includes('buenas')) {
          return {
            text: "¡Hola! ¡Es un placer saludarte! ¿En qué puedo ayudarte hoy con respecto a nuestros servicios de inteligencia artificial?",
            quickReplies: [
              { text: "Quiero saber sobre sus proyectos" },
              { text: "¿Cómo empezar con IA?" },
              { text: "Ver casos de éxito" }
            ]
          };
        } else if (lowerMessage.includes('implementación') || lowerMessage.includes('estrategia')) {
          return {
            text: "Nuestro servicio de estrategia e implementación incluye:\n\n1️⃣ Análisis de necesidades y diagnóstico\n2️⃣ Diseño de solución personalizada\n3️⃣ Desarrollo e implementación escalable\n4️⃣ Seguimiento y optimización continua\n\n¿Te gustaría agendar una consulta con nuestros expertos para discutir tu proyecto específico?",
            quickReplies: [
              { text: "Sí, quiero una consulta" },
              { text: "Más información primero" },
              { text: "Ver ejemplos de proyectos" }
            ]
          };
        } else if (lowerMessage.includes('formación') || lowerMessage.includes('capacitación')) {
          return {
            text: "Ofrecemos programas de formación adaptados a diferentes niveles y necesidades:\n\n🔹 Introducción a la IA para equipos directivos\n🔹 IA para negocios y estrategia empresarial\n🔹 Cursos técnicos avanzados para equipos de desarrollo\n🔹 Programas personalizados para tu organización\n\n¿Qué tipo de formación te interesa?",
            quickReplies: [
              { text: "Introducción a la IA" },
              { text: "Cursos técnicos" },
              { text: "Formación personalizada" }
            ]
          };
        } else if (lowerMessage.includes('soporte') || lowerMessage.includes('asistencia') || lowerMessage.includes('ayuda')) {
          return {
            text: "Nuestro servicio de soporte y asistencia técnica incluye:\n\n🔧 Servicio premium 24/7 para soluciones críticas\n🔧 Resolución de incidencias por especialistas\n🔧 Actualizaciones y mejoras continuas\n🔧 Asesoramiento técnico personalizado\n\n¿Necesitas soporte para una implementación existente o estás considerando una nueva solución?",
            quickReplies: [
              { text: "Soporte para implementación existente" },
              { text: "Nueva solución con soporte" },
              { text: "Planes de soporte disponibles" }
            ]
          };
        } else if (lowerMessage.includes('horario')) {
          return {
            text: "Nuestro horario de atención al cliente es:\n\n📅 Lunes a Viernes\n🕘 9:00 - 18:00 (Horario peninsular español)\n\nPara asistencia técnica urgente, disponemos de soporte 24/7 para clientes con contrato premium.",
            quickReplies: [
              { text: "¿Qué es el soporte premium?" },
              { text: "Contactar ahora" }
            ]
          };
        } else if (lowerMessage.includes('oficina') || lowerMessage.includes('física') || lowerMessage.includes('presencial')) {
          return {
            text: "Sí, contamos con oficinas físicas en:\n\n📍 Central: Calle José Tamayo, 8 - 18008 Granada, España\n\nTambién disponemos de delegaciones en Madrid y Barcelona para reuniones presenciales. ¿Prefieres una visita presencial o una reunión virtual?",
            quickReplies: [
              { text: "Prefiero reunión presencial" },
              { text: "Prefiero reunión virtual" }
            ]
          };
        } else if (lowerMessage.includes('llamada')) {
          return {
            text: "Estaremos encantados de llamarte. Para programar una llamada con uno de nuestros especialistas, necesitamos algunos datos:\n\n1. Nombre completo\n2. Número de teléfono\n3. Mejor horario para contactarte\n4. Tema a tratar\n\n¿Prefieres proporcionarnos estos datos por este chat o a través del formulario de contacto?",
            quickReplies: [
              { text: "Usar formulario de contacto" },
              { text: "Proporcionar datos por chat" }
            ]
          };
        } else if (lowerMessage.includes('proyecto') || lowerMessage.includes('caso') || lowerMessage.includes('éxito')) {
          return {
            text: "Hemos desarrollado proyectos de IA exitosos en diversos sectores:\n\n🏆 Sistema de predicción de demanda para cadena minorista (+25% precisión)\n🏆 Automatización de atención al cliente para compañía de seguros (ROI 300%)\n🏆 Análisis predictivo para mantenimiento industrial (reducción 40% costes)\n\n¿En qué sector te gustaría ver ejemplos específicos?",
            quickReplies: [
              { text: "Retail y comercio" },
              { text: "Finanzas y seguros" },
              { text: "Industria y fabricación" },
              { text: "Salud y bienestar" }
            ]
          };
        } else if (lowerMessage.includes('empezar con ia')) {
          return {
            text: "Para comenzar con la IA en tu empresa, recomendamos este enfoque:\n\n1️⃣ Diagnóstico inicial: Evaluamos tus necesidades y oportunidades\n2️⃣ Workshop estratégico: Definimos objetivos y casos de uso\n3️⃣ MVP y prueba de concepto: Implementación inicial controlada\n4️⃣ Escalado progresivo: Ampliación basada en resultados\n\n¿Te gustaría programar una reunión de diagnóstico inicial sin compromiso?",
            quickReplies: [
              { text: "Sí, quiero un diagnóstico inicial" },
              { text: "Enviar información por email" }
            ]
          };
        } else {
          return {
            text: "Gracias por tu mensaje. Para darte la mejor respuesta personalizada, voy a redirigir tu consulta a nuestro equipo de expertos. Mientras tanto, ¿hay algo específico sobre nuestras soluciones de IA en lo que pueda orientarte?",
            quickReplies: [
              { text: "Ver soluciones para empresas" },
              { text: "Solicitar llamada de un experto" },
              { text: "No, gracias" }
            ]
          };
        }
      }

      // Event listeners for chat
      chatbotSend.addEventListener('click', sendMessage);
      chatbotInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') sendMessage();
      });

      quickReplies.forEach(reply => {
        reply.addEventListener('click', () => {
          const message = reply.dataset.message;
          addMessage(message, 'user');
          
          setTimeout(() => {
            const response = getBotResponse(message);
            addMessage(response.text, 'bot', response.quickReplies);
          }, 1000);
        });
      });
    });
  </script>
</body>
</html>
